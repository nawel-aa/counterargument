<div class="container">
  <div class="row justify-content-center">
  <h1>Edit Your Profile</h1>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
    <%= simple_form_for @user do |f| %>
      <%= f.input :email %>
      <%= f.input :profile_picture, as: :file %>
      <%= f.submit %>
    <% end %>
    </div>
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-lg-6 col-md-10 col-12">
      <h1>Edit Your Profile</h1>
      <%= simple_form_for @user do |f| %>
        <%= f.input :email %>
        <%= f.input :nickname %>
        <%= f.input :profile_picture, as: :file %>
        <%= f.button :submit, class: "btn", value: "Save" %>
      <% end %>
    </div>
  </div>
</div>

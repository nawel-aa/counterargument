
    <%= simple_form_for :search_results, url: search_path, method: "GET", html: { class: 'row justify-content-end' } do |f| %>
      <input type="text" class="search-input" name="search" id="search" placeholder="Search..." autocomplete="off"/>
      <%= f.hidden_field :results_ids, id: 'results', value: '' %>

      <div class="iconsearch">
      <i class="fas fa-search" title="Search"></i>
      </div>

      <%= button_tag type: 'submit', class: " iconsearch2 cursor-pointer" do %>
        <i class="fas fa-search" title="Search"></i>
      <% end %>
    <% end %>


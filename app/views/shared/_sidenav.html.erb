<div id="sideBarNav" class="sidenav">
  <% if user_signed_in? %>
    <%= link_to 'My Profile', profile_path %>
    <%= link_to 'Add an Argument', new_argument_path  %>
    <%= link_to 'Log Out', destroy_user_session_path, :method => 'delete' %>
  <% else %>
    <%= link_to 'Log-in' , new_user_session_path %>
    <%= link_to 'Add an Argument', new_argument_path  %>
  <% end %>
  <div class="icon">
    <i class="fas fa-times"></i>
  </div>
</div>
<div class="avatar-btn">
  <% if @notifications %>
    <div id="notifications-counter" class="<%= "d-none" if @notifications.count <= 0 %> rounded-circle"><%= @notifications.count %></div>
  <% end %>
  <%= image_tag "useravatar.png", height: 42, width: 42, class:"openav rounded-circle" %>
  <!-- <i class="fas fa-bars"></i> -->
</div>




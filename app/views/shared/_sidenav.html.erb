<div id="sideBarNav" class="sidenav">
  <% if user_signed_in? %>
    <%= link_to 'My Profile', profile_path, class: "sidenav-element" %>
    <%= link_to 'Add an Argument', new_argument_path, class: "sidenav-element"  %>
    <%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', class: "sidenav-element" %>
  <% else %>
    <%= link_to 'Log-in' , new_user_session_path, class: "sidenav-element" %>
    <%= link_to 'Add an Argument', new_argument_path, class: "sidenav-element"  %>
  <% end %>
  <div class="icon">
    <i class="fas fa-times"></i>
  </div>
</div>
<div class="avatar-btn">
  <% if @notifications %>
    <div id="notifications-counter" class="<%= "d-none" if @notifications.size <= 0 %> rounded-circle"><%= @notifications.size %></div>
  <% end %>
  <% if user_signed_in? && current_user.profile_picture.attached? %>
    <%= cl_image_tag current_user.profile_picture.key, height: 42, width: 42, crop: :fill, class:"openav rounded-circle" %>
  <% else %>
    <div class="openav">
    <i class="fas fa-user"></i>
    <%#= image_tag "useravatar.png", height: 42, width: 42, class:"openav rounded-circle" %>
    </div>

  <% end %>

</div>





  <!-- Parent Argument -->
  <div class="col-12 col-md-12 justify-content-center show-argument-main">
    <h1 class="title"><%= @argument_show.content %></h1>
    <div class="arg-user">
    <%= image_tag "useravatar.png", class:"show-avatar" %>

    <div class="arg-info">
    <p class="nickname"><%= "Source: #{@argument_show.source}" %></p>
    <p class="nickname"><%=@argument_show.hidden ? "Submitted by: anonymous" : "Submitted by: #{@argument_show.user.nickname}"  %></p>
    <p class="nickname"><%= time_ago_in_words(@argument_show.created_at) %> ago</p>
    </div>
    </div>
  </div>

  <!-- Child Arguments  -->
  <% @argument_show.children.each do |counterargument| %>
  <div class="container" id="arg-<%= counterargument.id %>">
    <div class="show-argument-child">
      <div class="show-argument-child-infos">
        <h5><%= link_to counterargument.content, argument_path(counterargument) %></h5>
          <% unless counterargument.hidden %>
        <p>Submitted by: <%= link_to counterargument.user.nickname, argument_path(counterargument) %> <%= time_ago_in_words(counterargument.created_at) %> ago</p>
          <% end %>
        <p><strong>source:</strong> <%= link_to counterargument.source, argument_path(counterargument) %></p>
        <div class="votes">
          <%= link_to argument_votes_path(counterargument, title: "Good source!", category: "source", origin: @argument_show), method: :post do %>
            <div class = 'vote-btn'><p><i class="fas fa-book"></i> <%= Vote.where(argument_id: counterargument.id, category: "source").count %></p></div>
          <% end %>
          <%= link_to argument_votes_path(counterargument, title: "Funny Vote", category: "funny", origin: @argument_show), method: :post do %>
            <div class = 'vote-btn'><p><i class="far fa-laugh-beam"></i> <%= Vote.where(argument_id: counterargument.id, category: "funny").count %></p></div>
          <% end %>
          <%= link_to argument_votes_path(counterargument, title: "Very clear!", category: "concise", origin: @argument_show), method: :post do %>
            <div class = 'vote-btn'><p><i class="fas fa-bolt"></i> <%= Vote.where(argument_id: counterargument.id, category: "concise").count %></p></div>
          <% end %>
          <%= render partial: "shared/tag", locals: {tag_name: counterargument.tags} %>
        </div>
      </div>
    </div>
  </div>
  <% end %>


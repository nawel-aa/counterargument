<p><%= link_to "Back", :back %></p>
<div class="container">
  <div class="col-12 col-md-8 justify-content-center">
    <h1 class="title"><%= @argument_show.content %></h1>
    <p class="nickname"><%= @argument_show.user.nickname unless @argument_show.hidden %></p>
  </div>
</div>

<% @argument_show.children.each do |counterargument| %>
  <div class="container">
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= link_to counterargument.content, argument_path(counterargument) %></h2>
        <p>source: <%= link_to counterargument.source, argument_path(counterargument) %></p>
        <% unless counterargument.hidden %>
          <p>user: <%= link_to counterargument.user.nickname, argument_path(counterargument) %></p>
        <% end %>
        <div class="votes">
          <%= link_to argument_votes_path(counterargument, category: "source", origin: @argument_show), method: :post do %>
            <div><p><i class="fas fa-book"></i> <%= Vote.where(argument_id: counterargument.id, category: "source").count %></p></div>
          <% end %>
          <%= link_to argument_votes_path(counterargument, category: "funny", origin: @argument_show), method: :post do %>
            <div><p><i class="far fa-laugh-beam"></i> <%= Vote.where(argument_id: counterargument.id, category: "funny").count %></p></div>
          <% end %>
          <%= link_to argument_votes_path(counterargument, category: "concise", origin: @argument_show), method: :post do %>
            <div><p><i class="fas fa-bolt"></i> <%= Vote.where(argument_id: counterargument.id, category: "concise").count %></p></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="col-12 col-md-8 d-flex justify-content-center" id="Answer">
  <h1>Add an Answer</h1>
</div>
<div class="col-12 col-md-8 d-flex justify-content-center">
  <%= render '/arguments/form', arg: @argument_show %>
</div>
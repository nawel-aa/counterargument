<%= simple_form_for [@argument] do |f| %>
  <%= f.input :content %>
  <%= f.input :source %>
  <%= f.input :hidden, label: "Hide your username from this argument?" %>
  <%= f.hidden_field :parent_id, value: arg.id %>
